{
  "manifest_version": 2,

  "name": "Fantasyland browser extension",
  "description": "This browser extension allow you to automate some boring actions",
  "version": "1.2.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "src/control-panel/control-panel.html",
    "default_title": "Fantasyland helper"
  },

  "background": {
    "scripts": ["src/random.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*.fantasyland.ru/*"
  ]
}
